{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-v"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
            },
        },
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "module": "pensieve_ppo.train",
            "args": [
                "--agent-name=a3c",
                // "--agent-name=ppo",
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "imitate",
            "type": "debugpy",
            "request": "launch",
            "module": "pensieve_ppo.imitate",
            "args": [
                "--agent-name=a3c",
                // "--agent-name=ppo",
                "--teacher-agent-name=bba",
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "test",
            "type": "debugpy",
            "request": "launch",
            "module": "pensieve_ppo.test",
            "args": [
                "--agent-name=ppo",
                "--model-path=src/pretrain/nn_model_ep_155400.pth",
                // "--agent-name=bba",
                // "--agent-name=mpc-oracle",
                // "--agent-name=mpc",
                // "-ofuture_chunk_count=3",
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "generate exp pool",
            "type": "debugpy",
            "request": "launch",
            "module": "pensieve_ppo.generate_exp_pool",
            "args": [
                "--agent-name=netllm-opt-lora",
                "--teacher-agent-name=bba",
                "--parallel-workers=4",
                "--train-epochs=900",
                "--state-history-len=6",
                "-o",
                "plm_size='small'",
            ],
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "imitate exp pool",
            "type": "debugpy",
            "request": "launch",
            "module": "pensieve_ppo.imitate_exp_pool",
            "args": [
                "--agent-name=netllm-opt-lora",
                "--num-workers=4",
                "--train-epochs=900",
                "--state-history-len=6",
                "--device=cuda",
                // "--model-path=references/NetLLM/adaptive_bitrate_streaming/data/ft_plms/try_llama2_7b",
                "-o",
                "plm_size='small'",
                "min_reward=-85.01",
                "max_reward=4.3",
            ],
            "cwd": "${workspaceFolder}",
        },
    ]
}